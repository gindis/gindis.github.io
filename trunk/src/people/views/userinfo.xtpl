<div class="block-img banner" style="padding-top:133.33333333333333%">
  <div class="span-img">
    <div class="slide J_slide">
    <div class="item" style="display:block;background-image:url({{cover.url}})">
    <div class="mask"></div>
    <div class="slide-body">
      <div class="avatar">
        <img src="{{head.url}}" alt="">
      </div>
      <div class="name">{{name}}</div>
      <div class="motto">{{description}}</div>
      {{#if (area.name && area.name !== '')}}
      <div class="adr"><b></b>{{area.name}}</div>
      {{/if}}

      <div class="trends J_reg">
        <div class="item">
          <p class="num">{{attentionNum}}</p>
          <p class="tit">关注</p>
        </div>
        <div class="item">
          <p class="num">{{fansNum}}</p>
          <p class="tit">粉丝</p>
        </div>
        <b class="ui-border-r"></b>
      </div>

    </div>
    </div>
    </div>
  </div>
</div>