$topBarBg: #000;
/*body {
  padding-top: .44rem;
}*/
.topbar {
  width: 100%;
  height: .44rem;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: $topBarBg;
  box-sizing: border-box;
  .logo {
    width: .64rem;
    height: .11rem;
    background-image: url(../module/images/nothing_img@2x.png);
    background-size: .64rem .11rem;
    background-repeat: no-repeat;
    float: left;
    margin-left: .24rem;
    margin-top: .16rem;
    text-indent: -9999rem;
  }
  .slogan {
    color: #fff;
    float: left;
    height: .2;
    line-height: .2rem;
    padding-left: .24rem;
    margin-left: .24rem;
    margin-top: .12rem;
    border-left: #808080 .01rem solid;
  }
  .arrow {
    width: .18rem;
    height: .11rem;
    background-image: url(../module/images/right_arrow@2x.png);
    background-size: .17rem .11rem;
    background-repeat: no-repeat;
    float: right;
    margin-top: .16rem;
    margin-right: .15rem;
  }
}