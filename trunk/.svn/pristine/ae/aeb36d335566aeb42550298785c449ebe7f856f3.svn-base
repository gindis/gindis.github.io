.stuff-list,
.posts-list,
.goods-list {
  overflow: hidden;
  .item {
    background-color: #f2f1f3;
    float: left;
    position: relative;
    .ele {
      width: 100%;
      height: 100%;
      position: absolute;
      left: 0;
      top: 0;
      background-size: 100% 100%;
    }
  }
}
.goods-list {
  width: 100.1%;
  position: relative;
  .item {
    width: 33.33333%;
    padding-top: 52.03252032520326%;
    background-color: #fff;
    .ele-inner {
      width: 100%;
      padding-top: 133.33333333333333%;
      background-size: 100% 100%;
      background-color: #f2f1f3;
      position: relative;
    }
    &:nth-child(even){
      &:after {
        /*content: '';
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: -1px;
        z-index: 2;
        border-left: 1px solid #fff;
        border-right: 1px solid #fff;
        box-shadow: -1px 0 0 #fff, 1px 0 0 #fff;*/
      }
    }
    .fans {
      font-size: 0;
      text-align: center;
      line-height: 21px;
      b {
        width: 21px;
        height: 21px;
        display: inline-block;
        vertical-align: middle;
        margin-right: 2px;
        background-size: contain;
        background-repeat: no-repeat;
      }
      .b1 {
        background-image: url(../module/images/medal_1_icon@2x.png);
      }
      .b2 {
        background-image: url(../module/images/medal_2_icon@2x.png);
      }
      .b3 {
        background-image: url(../module/images/medal_3_icon@2x.png);
      }
      .b4 {
        background-image: url(../module/images/medal_4_icon@2x.png);
      }
      .b5 {
        background-image: url(../module/images/medal_5_icon@2x.png);
      }
      .b6 {
        background-image: url(../module/images/medal_6_icon@2x.png);
      }
      .b7 {
        background-image: url(../module/images/medal_7_icon@2x.png);
      }
      .b8 {
        background-image: url(../module/images/medal_8_icon@2x.png);
      }
      .b9 {
        background-image: url(../module/images/medal_9_icon@2x.png);
      }
      .num {
        font-size: 12px;
        color: #000;
        vertical-align: middle;
        position: relative;
        top: 1px;
      }
    }
  }
  &:after {
    content: '';
    width: 33.33333%;
    height: 100%;
    position: absolute;
    top: 0;
    z-index: 3;
    border-left: 1px solid #fff;
    border-right: 1px solid #fff;
    box-shadow: -1px 0 0 #fff,1px 0 0 #fff;
    left: 50%;
    margin-left: -16.8%;
  }
}