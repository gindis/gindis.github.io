@charset "utf-8";

html, body, h1, h2, h3, h4, ul, li, p {
  margin: 0;
  padding: 0;
}
html {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-touch-callout: none;
  -webkit-user-select: none;
}
body {
  color: #000;
  font-size: .14rem;
}
li {
  list-style: none
}
a {
  text-decoration: none;
  color: #000;
}
:focus {
  outline: 0;
  -webkit-tap-highlight-color: transparent;
}
button {
  background-color: #fff;
}

input {
  outline: none;
}

a.alink:link,
a.alink:visited {
  width: 100%;
  height: 100%;
  color: inherit;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}
.weixin_tip {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.35);
  z-index: 9999;
  top: 0;
  left: 0;
  &:after {
    content: "";
    width: 1.665rem;
    height: .49rem;
    background-image: url(../module/images/use_safari@3x.png);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center center;
    position: absolute;
    top: .1rem;
    right: .26rem;
  }
}